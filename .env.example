# CuliFeed Environment Variables
# Copy this file to .env and fill in your actual values
# Note: Variables use CULIFEED_ prefix and __ for nesting to match pydantic-settings

# Telegram Configuration (Required)
CULIFEED_TELEGRAM__BOT_TOKEN=123456789:ABC-DEF1234ghIkl-zyx57W2v1u123ew11_test
CULIFEED_USER__ADMIN_USER_ID=your_telegram_user_id  # Optional: for admin commands

# AI Provider API Keys (At least one required)
CULIFEED_AI__GEMINI_API_KEY=your_gemini_api_key_here     # Final fallback: Google Gemini (free tier)
CULIFEED_AI__GROQ_API_KEY=your_groq_api_key_here         # Primary: Groq (free tier)
CULIFEED_AI__OPENAI_API_KEY=your_openai_api_key_here     # Optional: OpenAI (paid)
CULIFEED_AI__DEEPSEEK_API_KEY=your_deepseek_api_key_here # Premium: DeepSeek (advanced reasoning)

# NEW: Dynamic AI Provider Priority Configuration
# Controls the order in which AI providers are tried for processing
CULIFEED_AI__PROVIDER_PRIORITY_PROFILE=cost_optimized   # Options: cost_optimized, quality_first, balanced, custom
CULIFEED_AI__CUSTOM_PROVIDER_ORDER=[]                   # JSON array when using custom profile, e.g., ["openai","gemini"]

# Provider Priority Profile Options:
# - cost_optimized: groq → deepseek → gemini → openai (default, free tiers first)
# - quality_first: deepseek → openai → gemini → groq (premium models first)  
# - balanced: deepseek → gemini → groq → openai (mix of cost/quality)
# - custom: Use CULIFEED_AI__CUSTOM_PROVIDER_ORDER to define exact order

# Examples for premium users:
# CULIFEED_AI__PROVIDER_PRIORITY_PROFILE=quality_first  # Use premium models first
# CULIFEED_AI__PROVIDER_PRIORITY_PROFILE=custom
# CULIFEED_AI__CUSTOM_PROVIDER_ORDER=["openai","gemini"] # Only use premium providers

# Logging Configuration
CULIFEED_LOGGING__LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR, CRITICAL
CULIFEED_LOGGING__CONSOLE_LOGGING=true              # Enable console output
CULIFEED_LOGGING__FILE_PATH=logs/culifeed.log       # Log file location
CULIFEED_LOGGING__MAX_FILE_SIZE_MB=10               # Max size before rotation
CULIFEED_LOGGING__BACKUP_COUNT=5                    # Number of backup files
CULIFEED_LOGGING__STRUCTURED_LOGGING=false         # Use JSON structured logging

# Database Configuration (Optional - defaults work fine)
CULIFEED_DATABASE__PATH=data/culifeed.db            # SQLite database location
CULIFEED_DATABASE__POOL_SIZE=5                      # Connection pool size
CULIFEED_DATABASE__CLEANUP_DAYS=7                   # Days to keep old articles
CULIFEED_DATABASE__AUTO_VACUUM=true                 # Automatic database maintenance
CULIFEED_DATABASE__BACKUP_ENABLED=true              # Enable automatic backups

# Performance Tuning (Optional)
CULIFEED_LIMITS__MAX_DAILY_API_CALLS=950            # Stay under free tier limits
CULIFEED_LIMITS__FALLBACK_TO_GROQ=true              # Use Groq when primary API exhausted
CULIFEED_LIMITS__FALLBACK_TO_KEYWORDS=true          # Use keyword-only when all APIs exhausted
CULIFEED_LIMITS__REQUEST_TIMEOUT=30                 # Request timeout in seconds
CULIFEED_PROCESSING__BATCH_SIZE=10                  # Articles per AI batch
CULIFEED_PROCESSING__PARALLEL_FEEDS=5               # Concurrent RSS fetches

# Processing Configuration (Optional - fine-tune content processing)
CULIFEED_PROCESSING__DAILY_RUN_HOUR=8               # Hour of day to run processing (0-23)
CULIFEED_PROCESSING__MAX_ARTICLES_PER_TOPIC=5       # Maximum articles per topic per day
CULIFEED_PROCESSING__MAX_CONTENT_LENGTH=2000        # Max content length for AI analysis
CULIFEED_PROCESSING__AI_RELEVANCE_THRESHOLD=0.5     # Minimum AI relevance score to include article
CULIFEED_PROCESSING__AI_SUMMARY_THRESHOLD=0.5       # Minimum AI relevance score to generate summary

# AI Model Configuration (Optional - customize models per provider)
CULIFEED_AI__GEMINI_MODEL=gemini-1.5-flash          # Primary Gemini model
CULIFEED_AI__GROQ_MODEL=llama-3.3-70b-versatile     # Primary Groq model
CULIFEED_AI__OPENAI_MODEL=gpt-4o-mini               # Primary OpenAI model
CULIFEED_AI__DEEPSEEK_MODEL=deepseek-chat           # Primary DeepSeek model (deepseek-chat, deepseek-reasoner)
CULIFEED_AI__TEMPERATURE=0.1                        # AI temperature (0.0-2.0)
CULIFEED_AI__MAX_TOKENS=500                          # Maximum tokens per response

# Webhook Configuration (Optional - for production)
CULIFEED_TELEGRAM__WEBHOOK_URL=https://yourdomain.com/webhook  # Telegram webhook URL
CULIFEED_TELEGRAM__WEBHOOK_SECRET=your_webhook_secret_here     # Webhook security token