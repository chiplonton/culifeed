# CuliFeed Environment Variables
# Copy this file to .env and fill in your actual values
# Note: Variables use CULIFEED_ prefix and __ for nesting to match pydantic-settings

# Telegram Configuration (Required)
CULIFEED_TELEGRAM__BOT_TOKEN=123456789:ABC-DEF1234ghIkl-zyx57W2v1u123ew11_test
CULIFEED_USER__ADMIN_USER_ID=your_telegram_user_id  # Optional: for admin commands

# AI Provider API Keys (At least one required)
CULIFEED_AI__GEMINI_API_KEY=your_gemini_api_key_here     # Final fallback: Google Gemini (free tier)
CULIFEED_AI__GROQ_API_KEY=your_groq_api_key_here         # Primary: Groq (free tier)
CULIFEED_AI__HUGGINGFACE_API_KEY=your_huggingface_api_key_here  # Secondary: HuggingFace (free tier)
CULIFEED_AI__OPENROUTER_API_KEY=your_openrouter_api_key_here  # Tertiary: OpenRouter (free tier)
CULIFEED_AI__OPENAI_API_KEY=your_openai_api_key_here     # Optional: OpenAI (paid)

# NEW: Dynamic AI Provider Priority Configuration
# Controls the order in which AI providers are tried for processing
CULIFEED_AI__PROVIDER_PRIORITY_PROFILE=cost_optimized   # Options: cost_optimized, quality_first, balanced, custom
CULIFEED_AI__CUSTOM_PROVIDER_ORDER=[]                   # JSON array when using custom profile, e.g., ["openai","gemini"]

# Provider Priority Profile Options:
# - cost_optimized: groq → huggingface → openrouter → gemini → openai (default, free tiers first)
# - quality_first: openai → gemini → groq → huggingface → openrouter (premium models first)  
# - balanced: gemini → groq → openai → huggingface → openrouter (mix of cost/quality)
# - custom: Use CULIFEED_AI__CUSTOM_PROVIDER_ORDER to define exact order

# Examples for premium users:
# CULIFEED_AI__PROVIDER_PRIORITY_PROFILE=quality_first  # Use premium models first
# CULIFEED_AI__PROVIDER_PRIORITY_PROFILE=custom
# CULIFEED_AI__CUSTOM_PROVIDER_ORDER=["openai","gemini"] # Only use premium providers

# Application Environment
CULIFEED_DEBUG=false                                 # Enable debug mode

# Logging Configuration
CULIFEED_LOGGING__LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR, CRITICAL
CULIFEED_LOGGING__CONSOLE_LOGGING=true              # Enable console output

# Database Configuration (Optional - defaults work fine)
CULIFEED_DATABASE__PATH=data/culifeed.db            # SQLite database location
CULIFEED_DATABASE__POOL_SIZE=5                      # Connection pool size

# Performance Tuning (Optional)
CULIFEED_LIMITS__MAX_DAILY_API_CALLS=950            # Stay under free tier limits
CULIFEED_PROCESSING__BATCH_SIZE=10                  # Articles per AI batch
CULIFEED_PROCESSING__PARALLEL_FEEDS=5               # Concurrent RSS fetches

# Trust validation settings removed for simplification

# Provider Quality Configuration (Optional - adjust AI provider confidence)
CULIFEED_PROVIDER_QUALITY__GROQ=1.0                         # Premium provider (no adjustment)
CULIFEED_PROVIDER_QUALITY__GEMINI=1.0                       # Premium provider (no adjustment)
CULIFEED_PROVIDER_QUALITY__HUGGINGFACE=0.85                 # Good but summarization-focused
CULIFEED_PROVIDER_QUALITY__OPENROUTER=0.70                  # Free tier limitations
CULIFEED_PROVIDER_QUALITY__KEYWORD_FALLBACK=0.45            # Basic keyword matching

# Quality monitoring settings removed for simplification

# Filtering Configuration (Optional - pre-filter and processing thresholds)
CULIFEED_FILTERING__MIN_RELEVANCE_THRESHOLD=0.1                    # Minimum relevance score for pre-filtering
CULIFEED_FILTERING__EXACT_PHRASE_WEIGHT=0.8                        # Weight for exact phrase matches
CULIFEED_FILTERING__PARTIAL_WORD_WEIGHT=0.4                        # Weight for partial word matches
CULIFEED_FILTERING__SINGLE_WORD_TF_CAP=0.6                         # Maximum TF score cap
CULIFEED_FILTERING__KEYWORD_MATCH_BONUS=0.2                        # Multiple keyword match bonus
CULIFEED_FILTERING__FALLBACK_RELEVANCE_THRESHOLD=0.3               # Minimum score for keyword fallback
CULIFEED_FILTERING__FALLBACK_CONFIDENCE_CAP=0.6                    # Maximum confidence for fallback results

# Delivery Quality Configuration (Optional - message formatting and quality)
CULIFEED_DELIVERY_QUALITY__HIGH_QUALITY_THRESHOLD=0.8              # High quality article threshold
CULIFEED_DELIVERY_QUALITY__GOOD_QUALITY_THRESHOLD=0.65             # Good quality article threshold
CULIFEED_DELIVERY_QUALITY__MODERATE_QUALITY_THRESHOLD=0.45         # Moderate quality article threshold
CULIFEED_DELIVERY_QUALITY__READING_TIME_PER_ARTICLE=0.5            # Estimated reading time per article
CULIFEED_DELIVERY_QUALITY__MESSAGE_DELAY_SECONDS=0.5               # Delay between messages
CULIFEED_DELIVERY_QUALITY__CONTENT_BREAK_THRESHOLD=0.7             # Smart content breaking threshold

# Webhook Configuration (Optional - for production)
CULIFEED_TELEGRAM__WEBHOOK_URL=https://yourdomain.com/webhook  # Telegram webhook URL
CULIFEED_TELEGRAM__WEBHOOK_SECRET=your_webhook_secret_here     # Webhook security token